<?xml version="1.0" encoding="utf-8"?>
<rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="5"
        android:shape="ring"
        android:useLevel="false" >
        <gradient
            android:centerColor="@color/sbc_header_text"
            android:endColor="@color/result_view"
            android:startColor="#FFFFFF"
            android:type="sweep" />
        <!--ratio比率  rectangle(矩形)，oval(椭圆)，line(横线)和ring(圆环)  gradient梯度，陡度
            sweep打扫，延伸，挥动-->
    </shape>

</rotate>  