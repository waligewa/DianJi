<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_setting_dailog"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="获取管理员授权"
        android:textColor="@color/blue"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="管理员账号："
            android:textSize="20dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/admin_num"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_background"
            android:maxWidth="300dp"
            android:minWidth="200dp"
            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="管理员密码："
            android:textSize="20dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/admin_pwd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_background"
            android:maxWidth="300dp"
            android:minWidth="200dp"
            android:ellipsize="end"
            android:lines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/check_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_bt"
                android:drawableLeft="@drawable/save"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="验证"
                android:textColor="@color/bt_hui"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cancel_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_tv"
                android:drawableLeft="@drawable/cancel"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="取消"
                android:textColor="@color/bt_hui"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
