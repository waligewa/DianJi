<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Installation_Information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_f5f5f5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_equipment_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/shape_btn_checked7"
                android:drawableLeft="@mipmap/search"
                android:paddingLeft="8dp"
                android:hint="请输入设备编号"
                android:maxLength="13"
                android:textColor="@color/text_color2"
                android:textColorHint="@color/text_color4"/>

            <TextView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="搜索"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/selecter_btn4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_weight="0.5"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shebei" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备名称:"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="产品型号:"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="产品编号:"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="所在区域:"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备地址:"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设备型号:"
                    android:textColor="@color/color_333333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/EquipmentName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/EquipmentType"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/EquipmentNum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/EquipmentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/EquipmentPosition"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_333333" />

                <TextView
                    android:id="@+id/EquipmentStyle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/color_333333" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/value_5dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">

            <Button
                android:id="@+id/bt_map_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/selecter_btn5"
                android:layout_margin="@dimen/value_5dp"
                android:padding="10dp"
                android:text="到这儿去"
                android:textColor="#fff"
                android:textSize="16dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
