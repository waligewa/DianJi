<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".activity.PerfectInformationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/value_10dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="设备编号："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/equipment_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入设备编号"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="设备ID："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/equipment_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入设备ID"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:minWidth="70dp"
                    android:text="设备型号："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/equipment_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:background="@drawable/shape_frame"
                    android:gravity="center_vertical"
                    android:hint="请输入设备型号"
                    android:padding="@dimen/value_5dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:minWidth="70dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="设备名称："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入设备名称"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="设备类型："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/device_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入设备类型"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="水泵功率："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/pump_power"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入水泵功率"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_5dp"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:text="kW"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="系统流量："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/system_flow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入系统流量"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_5dp"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:text="m³/h"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="系统扬程："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/system_lift"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入系统扬程"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_5dp"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:text="m"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="进水管道直径："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/import_dn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入进水管道直径"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="出水管道直径："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/export_dn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入出水管道直径"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="出厂日期："
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/manufacture_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selecter_btn1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="请选择出厂日期"
                    android:textColor="#fff"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="用户名称："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入用户名称"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="联系人："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/creater"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入联系人"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="联系方式："
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/customer_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入联系方式"
                    android:textSize="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="用户地址："
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/value_10dp"
                    android:gravity="center"
                    android:background="@drawable/selecter_btn1"
                    android:hint="请选择省"
                    android:textColorHint="@color/white"
                    android:paddingLeft="@dimen/value_5dp"
                    android:paddingRight="@dimen/value_5dp"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="左侧可以点击"
                    android:textColor="#f00"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/background_f5f5f5"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/details_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minWidth="70dp"
                    android:minHeight="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/value_1dp"
                    android:layout_marginBottom="@dimen/value_1dp"
                    android:padding="@dimen/value_5dp"
                    android:background="@drawable/shape_frame"
                    android:hint="请输入用户详细地址"
                    android:textSize="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/value_10dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selecter_btn"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                android:textColorHint="#bbffffff"
                android:textSize="15dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
