<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".activity.MaintenanceManagementActivity">

    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#013933">

        <LinearLayout
            android:id="@+id/mm_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/mm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="14"
            android:layout_centerInParent="true"
            android:text="首页"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/Installation_Information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_f5f5f5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_equipment_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@drawable/shape_btn_checked7"
                    android:drawableLeft="@drawable/search"
                    android:drawablePadding="@dimen/value_5dp"
                    android:paddingLeft="8dp"
                    android:hint="请输入设备编号"
                    android:maxLength="13"
                    android:textColor="@color/text_color2"
                    android:textColorHint="@color/text_color4"/>

                <TextView
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="搜索"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/selecter_btn4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@mipmap/splash2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="设备名称:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="产品型号:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="设备编号:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="设备ID:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="设备型号:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="通讯地址:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="水泵功率:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="系统流量:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="系统扬程:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="进口DN:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="出口DN:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="出厂日期:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="设备地址:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="所在地址:"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/EquipmentName"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/EquipmentType"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/EquipmentNum"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/equipment_id"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/EquipmentStyle"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/postal_address"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/pump_power"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/system_flow"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/system_lift"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/import_dn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/export_dn"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/EquipmentPosition"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/EquipmentAddress"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:gravity="left"
                            android:textColor="@color/color_333333"
                            android:text="aaaaaa"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="@dimen/value_5dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="true" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5">

                <Button
                    android:id="@+id/bt_map_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/selecter_btn5"
                    android:layout_margin="@dimen/value_5dp"
                    android:padding="10dp"
                    android:text="到这儿去"
                    android:textColor="#fff"
                    android:textSize="16dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>